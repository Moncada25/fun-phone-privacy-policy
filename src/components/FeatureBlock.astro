---
export interface Props {
  icon: string;
  title: string;
  bullets: string[];
}
const { icon, title, bullets } = Astro.props;
---
<section class="bg-white dark:bg-neutral-800 rounded-2xl shadow-md p-6 mb-6 border border-gray-100 dark:border-neutral-700 transition hover:shadow-lg">
  <div class="flex items-center mb-3">
    <div class="w-10 h-10 flex items-center justify-center bg-accent/10 rounded-xl mr-3">
      <span innerHTML={icon}></span>
    </div>
    <h3 class="text-xl font-semibold text-accent dark:text-blue-400">{title}</h3>
  </div>
  <ul class="list-disc pl-6 text-base text-gray-700 dark:text-gray-200">
    {bullets.map(bullet => <li>{bullet}</li>)}
  </ul>
</section>
