---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import StickyCTA from '../components/StickyCTA.astro';
import PrivacyBadge from '../components/PrivacyBadge.astro';
import ScreenshotCarousel from '../components/ScreenshotCarousel.astro';
import PermissionsBlock from '../components/PermissionsBlock.astro';
---
<!DOCTYPE html>
<html lang="es" x-data="{lang: 'es'}" x-on:lang.window="lang = $event.detail" class="">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Fun Phone: Dialer & Contacts</title>
    <meta name="description" content="Tu centro completo de llamadas, contactos y productividad. No data shared. No data collected. Descarga Fun Phone en Google Play." />
    <link rel="manifest" href={import.meta.env.BASE_URL + 'site.webmanifest'} />
    <link rel="icon" type="image/png" sizes="192x192" href={import.meta.env.BASE_URL + 'assets/icon-192.png'} />
    <link rel="icon" type="image/png" sizes="512x512" href={import.meta.env.BASE_URL + 'assets/icon-512.png'} />
    <meta name="theme-color" content="#0066e0" />
    <meta property="og:title" content="Fun Phone: Dialer & Contacts" />
    <meta property="og:description" content="Tu centro completo de llamadas, contactos y productividad. No data shared. No data collected." />
    <meta property="og:image" content={import.meta.env.BASE_URL + 'assets/og-cover.png'} />
    <meta property="og:url" content="https://moncada25.github.io/fun-phone-web/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Fun Phone: Dialer & Contacts" />
    <meta name="twitter:description" content="Your complete hub for calls, contacts, and productivity. No data shared. No data collected." />
    <meta name="twitter:image" content={import.meta.env.BASE_URL + 'assets/og-cover.png'} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Fun Phone: Dialer & Contacts",
        "applicationCategory": "CommunicationApp",
        "operatingSystem": "Android",
        "offers": {"@type":"Offer","price":"0","priceCurrency":"USD"},
        "downloadUrl": "https://play.google.com/store/apps/details?id=com.bookverse.contacts"
      }
    </script>
    <script>
      // Dark mode por defecto SIEMPRE (a menos que el usuario lo cambie manualmente)
      if (localStorage.getItem('darkMode') === null) {
        localStorage.setItem('darkMode', 'true');
        document.documentElement.classList.add('dark');
      } else if (localStorage.getItem('darkMode') === 'true') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="bg-gray-50 dark:bg-neutral-900 text-gray-900 dark:text-gray-100 min-h-screen">
    <Navbar />
    <main class="max-w-4xl mx-auto p-4 pt-24">
      <!-- HERO -->
      <section id="hero" class="text-center mb-16 mt-10">
        <template x-if="lang==='es'">
          <div>
            <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">¡Haz tus llamadas más divertidas, seguras y productivas!</h1>
            <p class="mb-8 text-xl md:text-2xl text-accent font-semibold">La app de teléfono que respeta tu privacidad y te da el control total.</p>
            <div class="flex flex-col md:flex-row justify-center items-center gap-4 mb-8">
              <a href="https://play.google.com/store/apps/details?id=com.bookverse.contacts" class="bg-accent text-white px-8 py-4 rounded-2xl shadow-xl font-bold text-xl hover:bg-blue-700 transition">Descargar en Google Play</a>
              <a href={import.meta.env.BASE_URL + 'features/'} class="text-accent underline font-semibold text-lg">Ver funciones</a>
            </div>
            <div class="mt-6 flex justify-center">
              <PrivacyBadge />
            </div>
          </div>
        </template>
        <template x-if="lang==='en'">
          <div>
            <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">Make your calls fun, safe and productive!</h1>
            <p class="mb-8 text-xl md:text-2xl text-accent font-semibold">The phone app that respects your privacy and gives you total control.</p>
            <div class="flex flex-col md:flex-row justify-center items-center gap-4 mb-8">
              <a href={import.meta.env.BASE_URL + 'features/'} class="text-accent underline font-semibold text-lg">See features</a>
            </div>
            <div class="mt-6 flex justify-center">
              <PrivacyBadge />
            </div>
          </div>
        </template>
      </section>

      <!-- GALERÍA -->
      <section id="gallery" class="mt-12 mb-12">
        <template x-if="lang==='es'">
          <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">Galería</h2>
        </template>
        <template x-if="lang==='en'">
          <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">Gallery</h2>
        </template>
        <ScreenshotCarousel />
      </section>

      <!-- TEASERS -->
      <section class="grid md:grid-cols-2 gap-6 mt-12">
        <a href={import.meta.env.BASE_URL + 'features/'} class="block bg-white dark:bg-neutral-800 rounded-2xl shadow p-6 border border-gray-100 dark:border-neutral-700 hover:shadow-lg transition">
          <template x-if="lang==='es'">
            <div>
              <h2 class="text-xl font-semibold mb-2">Explora todas las funciones</h2>
              <p class="text-gray-700 dark:text-gray-300">Marcador avanzado, contactos potenciados, productividad y más.</p>
            </div>
          </template>
          <template x-if="lang==='en'">
            <div>
              <h2 class="text-xl font-semibold mb-2">Explore all features</h2>
              <p class="text-gray-700 dark:text-gray-300">Advanced dialer, empowered contacts, productivity and more.</p>
            </div>
          </template>
        </a>
        <a href={import.meta.env.BASE_URL + 'faq/'} class="block bg-white dark:bg-neutral-800 rounded-2xl shadow p-6 border border-gray-100 dark:border-neutral-700 hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-2">FAQ</h2>
          <template x-if="lang==='es'">
            <p class="text-gray-700 dark:text-gray-300">Resuelve dudas frecuentes y configuración predeterminada.</p>
          </template>
          <template x-if="lang==='en'">
            <p class="text-gray-700 dark:text-gray-300">Common questions and default app setup.</p>
          </template>
        </a>
      </section>

      <!-- CTA FINAL -->
      <section id="cta-final" class="text-center my-16">
        <template x-if="lang==='es'">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold mb-4">¿Listo para mejorar tu experiencia de llamadas?</h2>
            <a href="https://play.google.com/store/apps/details?id=com.bookverse.contacts" target="_blank" rel="noopener" class="inline-block bg-accent text-white px-10 py-4 rounded-2xl shadow-xl font-bold text-xl hover:bg-blue-700 transition">
              Instalar desde Google Play
            </a>
          </div>
        </template>
        <template x-if="lang==='en'">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold mb-4">Ready to upgrade your calling experience?</h2>
            <a href="https://play.google.com/store/apps/details?id=com.bookverse.contacts" target="_blank" rel="noopener" class="inline-block bg-accent text-white px-10 py-4 rounded-2xl shadow-xl font-bold text-xl hover:bg-blue-700 transition">
              Install from Google Play
            </a>
          </div>
        </template>
      </section>
    </main>
    <StickyCTA />
  <Footer />
  </body>
</html>
