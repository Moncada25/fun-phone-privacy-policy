---
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import FeatureBlock from '../../components/FeatureBlock.astro';
---
<!DOCTYPE html>
<html lang="es" x-data="{lang:'es'}" x-on:lang.window="lang = $event.detail">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Funciones – Fun Phone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="bg-gray-50 dark:bg-neutral-900 text-gray-900 dark:text-gray-100 min-h-screen">
    <Navbar />
    <main class="max-w-4xl mx-auto p-4 pt-24">
      <h1 class="text-3xl md:text-4xl font-bold mb-8 text-accent text-center" x-show="lang==='es'">Funciones</h1>
      <h1 class="text-3xl md:text-4xl font-bold mb-8 text-accent text-center" x-show="lang==='en'">Features</h1>
      <!-- Español -->
      <div class="grid md:grid-cols-2 gap-8" x-show="lang==='es'">
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M15 5l7 7-7 7M8 5l-7 7 7 7'/></svg>" title="Marcador Avanzado y Llamadas" bullets={["Búsqueda inteligente T9 y marcado rápido.","Historial completo con filtros, favoritos y búsqueda.","Interfaz profesional: responder, retener, silenciar, altavoz y grabación.","Soporte dual-SIM y enrutamiento inteligente.","Compartir números por QR con un toque.","Marcado por voz y manos libres.","Sensor de proximidad para manejo fluido de llamadas."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><circle cx='12' cy='12' r='10'/><path stroke-linecap='round' stroke-linejoin='round' d='M8 12h4v4m0-4V8'/></svg>" title="Gestión Poderosa de Contactos" bullets={["Agregar, editar, importar/exportar (JSON/vCard).","Escáner y generador de QR para compartir contactos.","Sincronización multi-cuenta (Google, local, otros).","Búsqueda y filtrado avanzados, organización flexible.","Gestión de fotos y respaldo de contactos."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='3' width='18' height='18' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M9 9h6v6H9z'/></svg>" title="Suite de Productividad" bullets={["Notas enriquecidas con formato y multimedia.","Listas de verificación interactivas.","Recordatorios inteligentes y notificaciones.","Grabación de voz y organización de audios.","Gestión de tareas con fechas y prioridades."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M9 19V6h13M9 6L5 9.5M9 6l-4 3.5'/></svg>" title="Centro de Entretenimiento" bullets={["Mini-juegos clásicos: Snake, Tic-Tac-Toe, Puzzle, Ahorcado, Memoria, Breakout.","Lienzo de pintura para creatividad y garabatos.","Juega y relájate en cualquier momento."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M12 4v16m8-8H4'/></svg>" title="Personalización Total" bullets={["Temas dinámicos claro/oscuro con cambio automático.","Paleta de colores extensa y acentos personalizables.","Múltiples familias y tamaños de fuente.","Animaciones y transiciones configurables.","Interfaz completamente bilingüe."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='11' width='18' height='10' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M7 11V7a5 5 0 0110 0v4'/></svg>" title="Privacidad y Seguridad Primero" bullets={["Permisos granulares y explicaciones claras.","Datos almacenados localmente, nunca compartidos.","Control total sobre acceso y permisos.","Sin anuncios invasivos."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='4' y='4' width='16' height='16' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M8 8h8v8H8z'/></svg>" title="Extras y Accesibilidad" bullets={["Integración de calendario de festivos.","Reconocimiento de voz para accesibilidad.","Generación de QR para contactos y texto.","Personalización de retroalimentación háptica.","Gestión avanzada de notificaciones."]} />
      </div>
      <!-- English -->
      <div class="grid md:grid-cols-2 gap-8" x-show="lang==='en'">
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M15 5l7 7-7 7M8 5l-7 7 7 7'/></svg>" title="Advanced Dialer & Calls" bullets={["Smart T9 search and quick dial.","Full call history with advanced filters, favorites, and search.","Pro call interface: answer, hold, mute, speaker, record.","Dual-SIM support with smart routing.","Share numbers via QR with one tap.","Voice recognition for hands-free dialing.","Proximity sensor for smooth call handling."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><circle cx='12' cy='12' r='10'/><path stroke-linecap='round' stroke-linejoin='round' d='M8 12h4v4m0-4V8'/></svg>" title="Powerful Contact Management" bullets={["Add, edit, import/export (JSON/vCard).","QR scanner and generator for instant sharing.","Multi-account sync (Google, local, others).","Advanced search, filtering, flexible organization.","Contact photos and backup management."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='3' width='18' height='18' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M9 9h6v6H9z'/></svg>" title="Integrated Productivity Suite" bullets={["Rich text notes with formatting and media.","Interactive checklists with progress tracking.","Smart reminders and notifications.","Voice recording with playback and organization.","Task management with due dates and priorities."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M9 19V6h13M9 6L5 9.5M9 6l-4 3.5'/></svg>" title="Entertainment Center" bullets={["Classic mini-games: Snake, Tic-Tac-Toe, Puzzle, Hangman, Memory, Breakout.","Drawing canvas for creativity and doodles.","Play and relax anytime."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M12 4v16m8-8H4'/></svg>" title="Total Customization" bullets={["Dynamic light/dark themes with auto-switch.","Extensive color palette and accent customization.","Multiple font families and sizes.","Configurable animations and transitions.","Fully bilingual interface."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='11' width='18' height='10' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M7 11V7a5 5 0 0110 0v4'/></svg>" title="Privacy & Security First" bullets={["Granular permissions with clear explanations.","Local data storage, never shared.","Full control over access and permissions.","No invasive ads."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='4' y='4' width='16' height='16' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M8 8h8v8H8z'/></svg>" title="Extras & Accessibility" bullets={["Public holiday calendar integration.","Voice recognition for accessibility.","QR generation for contacts and text.","Customizable haptic feedback.","Advanced notification management."]} />
      </div>
    </main>
    <Footer />
  </body>
</html>
