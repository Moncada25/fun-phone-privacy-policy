---
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import FeatureBlock from '../../components/FeatureBlock.astro';
---
<!DOCTYPE html>
<html lang="es" x-data="{lang:'es'}" x-on:lang.window="lang = $event.detail">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Funciones – Fun Phone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="bg-gray-50 dark:bg-neutral-900 text-gray-900 dark:text-gray-100 min-h-screen">
    <Navbar />
    <main class="max-w-4xl mx-auto p-4 pt-24">
      <h1 class="text-3xl md:text-4xl font-bold mb-8" x-show="lang==='es'">Funciones</h1>
      <h1 class="text-3xl md:text-4xl font-bold mb-8" x-show="lang==='en'">Features</h1>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Reutilizamos los bloques de valor -->
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M15 5l7 7-7 7M8 5l-7 7 7 7'/></svg>" title="Marcador y Llamadas Avanzadas" bullets={["Marcador rápido y búsqueda inteligente.","Identifica y gestiona llamadas recientes.","Soporte Dual SIM y llamadas VoLTE.","Acceso directo a favoritos y contactos frecuentes."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><circle cx='12' cy='12' r='10'/><path stroke-linecap='round' stroke-linejoin='round' d='M8 12h4v4m0-4V8'/></svg>" title="Contactos Potenciados" bullets={["Crea, edita y organiza contactos fácilmente.","Sincronización con tu cuenta Google.","Vista de detalles y acciones rápidas.","Importa/exporta contactos."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='3' width='18' height='18' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M9 9h6v6H9z'/></svg>" title="Suite de Productividad" bullets={["Notas rápidas y recordatorios en llamadas.","Historial de llamadas detallado.","Filtros y búsqueda avanzada.","Integración con apps de calendario y mensajes."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M9 19V6h13M9 6L5 9.5M9 6l-4 3.5'/></svg>" title="Centro de Entretenimiento" bullets={["Tonos y fondos personalizables.","Juegos y minitareas integrados.","Animaciones y temas dinámicos."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' d='M12 4v16m8-8H4'/></svg>" title="Personalización Total" bullets={["Modo claro/oscuro automático.","Ajusta colores, fuentes y accesos.","Widgets y accesos directos."]} />
        <FeatureBlock icon="<svg fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24'><rect x='3' y='11' width='18' height='10' rx='2'/><path stroke-linecap='round' stroke-linejoin='round' d='M7 11V7a5 5 0 0110 0v4'/></svg>" title="Privacidad y Seguridad Primero" bullets={["No compartimos ni recolectamos datos.","Permisos mínimos y transparentes.","Sin anuncios invasivos.","Control total desde ajustes."]} />
      </div>
    </main>
    <Footer />
  </body>
</html>
